<% provide(:title, 'Log In') %>

<div class="row col-md-offset-1">
  <h3>Log In</h3>
  <div class="col-md-2 ">
    <%= form_with(scope: :session, local: true) do |f| %>
      <%= f.label :name, "Username"%>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>